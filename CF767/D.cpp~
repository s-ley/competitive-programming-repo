  while(p>0){
    
  }
}

int main(){
  int t; cin >> t;
  while(t--){
    int n; cin >> n;
    bool ok = false;
    for(int i = 0; i<n; i++){
      string str; cin >> str;

      bool palin = str.size() == 1 ||
	(str.size() > 1 && str[0] == str[str.size()-1]);
      
      if(palin)
	ok = true;
    }

    if(ok){
      cout << "YES\n";
      continue;
    }
  }
}
